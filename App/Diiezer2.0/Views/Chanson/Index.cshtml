@model IEnumerable<Diiezer2._0.Models.vmChansonInformation>

@{
    ViewBag.Title = "Index";
}


<h2>Page @ViewBag.page</h2>

<table class="table grey-box table-bordered border0 table-striped">
    <tr>
        <th>
            Titre
        </th>
        <th>
            Durée
        </th>
        <th>
            Artiste
        </th>
        <th>
            Album
        </th>
        <th>
            Note
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.titre, "Details", new { id = item.idChanson })
        </td>
        <td>
            @{ var duree = (item.durée / 60).ToString() + " min " + (item.durée % 60).ToString();}
            @duree
        </td>
        <td>
            @Html.ActionLink(item.artiste, "../Artiste/Details", new { id = item.idArtiste })
        </td>
        <td>
            @Html.ActionLink(item.album, "../Album/Details", new { id = item.idAlbum })
        </td>
        <td>

            @if (Request.IsAuthenticated)
            {
                int j;
                for (int i = 0; i < 5; i++)
                {
                    j = i + 1;
                    if (i < item.note)
                    {
                        <a href="../Note/Noter?idMusique=@item.idChanson&&note=@j&&url=../Chanson/Index">
                            <img src="~/Content/img/fullstar2.png" style="width:15px;height:15px;">
                        </a>
                    }
                    else
                    {
                        <a href="../Note/Noter?idMusique=@item.idChanson&&note=@j&&url=../Chanson/Index">
                            <img src="~/Content/img/emptystar2.png" style="width:15px;height:15px;">
                        </a>
                    }
                }
            }
            else
            {
                int j;
                for (int i = 0; i < 5; i++)
                {
                    j = i + 1;
                    if (i < item.note)
                    {
                        <img src="~/Content/img/fullstar2.png" style="width:15px;height:15px;">
                    }
                    else
                    {
                        <img src="~/Content/img/emptystar2.png" style="width:15px;height:15px;">
                    }
                }
            }
        </td>
        <td>
            @{
                if (item.isExtract && User.Identity.IsAuthenticated)
                {
                    <p>Acheter morceaux</p>
                }
            }
        </td>
        
    </tr>
}

</table>


<!-- Pagination -->
<div class="row text-center">
    <div class="col-lg-12">
        <ul class="pagination">
            <li>
                <a href="/Chanson/Index/@ViewBag.precedente">&laquo;</a>  
            </li>
            @for (int i = 1; i <= ViewBag.nbPage; i++)
            {
                <li class="active">
                    <a href="/Chanson/Index/@i">@i</a>
                </li>
            }        

            <li>
                <a href="/Chanson/Index/@ViewBag.suivante">&raquo;</a>
            </li>
        </ul>
    </div>
</div>
<!-- /.row -->