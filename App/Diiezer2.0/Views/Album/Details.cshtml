@model Diiezer2._0.Models.vmAlbumInformation


<h2>Details</h2>

<div class="row">
    <div class="span7">
        <h4>@Model.nom</h4>
        <hr />
        <dl class="dl-horizontal">
            <dd>
                Artiste : @Model.artiste
                @Html.ActionLink(Model.artiste, "../Artiste/Details", new { id = Model.idArtiste })
            </dd>
            <dd>
                Nombre de musiques : @Model.nombre
            </dd>
            <dd>
                Durée : @Model.duree
            </dd>
            <dd>
                Style : @Model.style
            </dd>
        </dl>
        <hr />
        <hr />
        <h4>Musiques</h4>
        <hr />
        <d1 class="d1-horizontal">
            @{
                foreach (var item in Model.chansons)
                {
                    <h5>
                        @item.Titre
                        <audio src=@item.Musique controls></audio>
                    </h5>
                }
            }
        </d1>
    </div>
    <div class="span5">
        <img src=@Model.cover style="width:250px;height:250px;">
    </div>
</div>
<p>
    @Html.ActionLink("Retourner à la liste des albums", "Index2")
</p>