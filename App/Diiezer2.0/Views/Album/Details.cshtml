@model Diiezer2._0.Models.vmAlbumInformation


    <div class="row">
        <hr />
        <h4>@Model.nom</h4>
        <hr />
    </div>

<div class="container grey-box">
    <div class="row" style="padding-top : 1%; padding-bottom : 1%">
        <div class="col-xs-12 col-sm-5 col-md-3 col-lg-3 col-xl-3">
            <img src=@Model.cover class="img-responsive">
        </div>
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-9">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <table class="table table-responsive table-hover table-bordered border0">
                            <tr>
                                <td>Artiste</td>
                                <td>@Html.ActionLink(Model.artiste, "../Artiste/Details", new { id = Model.idArtiste })</td>
                            </tr>
                            <tr>
                                <td>Nombre de musiques</td>
                                <td>@Model.nombre</td>
                            </tr>
                            <tr>
                                <td>Durée</td>
                                <td>
                                    @{ var duree = (Model.duree / 60).ToString() + " min " + (Model.duree % 60).ToString();}
                                    @duree
                                </td>
                            </tr>
                            <tr>
                                <td>Style</td>
                                <td>@Model.genre</td>
                            </tr>
                            <tr>
                                <td>Note</td>
                                <td>
                                    @{
                                        for (int i = 0; i < 5; i++)
                                        {
                                            if (i < Model.note)
                                            {
                                                <img src="~/Content/img/FullStar2.png" style="width:5%;height:auto">
                                            }
                                            else
                                            {
                                                <img src="~/Content/img/EmptyStar2.png" style="width:5%;height:auto">
                                            }
                                        }
                                    }
                                </td>
                            </tr>
                        </table>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <button class="btn btn-danger btn-achat">@Html.ActionLink("Acheter l'Album", "../Achat/AcheterAlbum", new { idAlbum = Model.id })</button>
                </div>
            </div>

        </div>
    </div>

    <div class="container">
        @{
            foreach (var item in Model.chansons)
            {
                <div class="row">
                    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 col-xl-3">
                        <h5>@Html.ActionLink(item.titre, "../Chanson/Details", new { id = item.idChanson })</h5>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-4 col-lg-4 col-xl-4">
                        <h5>
                            <audio src=@item.musique controls class="audio-box"></audio>
                        </h5>
                    </div>
                    <div class="col-xs-6 col-sm-2 col-md-1 col-lg-1 col-xl-1">
                        @{
                            if (!item.isExtract && User.Identity.IsAuthenticated)
                            {
                                <a href=@item.musique download><img src="~/Content/img/download2.png" class="img-responsive btn-dl"></a>
                            }
                        }
                    </div>
                    <div class="col-xs-6 col-sm-4 col-md-2 col-lg-2 col-xl-2">
                        @{
                            if (Request.IsAuthenticated)
                            {
                                int j;
                                for (int i = 0; i < 5; i++)
                                {
                                    j = i + 1;
                                    if (i < item.note)
                                    {
                                        <a href="../../Note/Noter?idMusique=@item.idChanson&&note=@j&&url=../Album/Details/@item.idAlbum">
                                            <img src="~/Content/img/fullstar2.png" style="width:10%;height:auto;margin-top:5%">
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="../../Note/Noter?idMusique=@item.idChanson&&note=@j&&url=../Album/Details/@item.idAlbum">
                                            <img src="~/Content/img/emptystar2.png" style="width:10%;height:auto;margin-top:5%">
                                        </a>
                                    }
                                }
                            }
                            else
                            {
                                for (int i = 0; i < 5; i++)
                                {
                                    if (i < item.note)
                                    {
                                        <img src="~/Content/img/FullStar2.png" style="width:10%;height:10%;margin-top:5%">
                                    }
                                    else
                                    {

                                        <img src="~/Content/img/EmptyStar2.png" style="width:10%;height:10%;margin-top:5%">
                                    }
                                }
                            }
                        }
                    </div>
                    <div class="col-xs-2 col-sm-6 col-md-2 col-lg-2 col-xl-2">
                        @if (Request.IsAuthenticated)
                        {

                        }
                        else
                        {

                        }

                    </div>
                </div>
            }
        }
    </div>



    <p>
        @Html.ActionLink("Retourner à la liste des albums", "Index2")
    </p>

</div>