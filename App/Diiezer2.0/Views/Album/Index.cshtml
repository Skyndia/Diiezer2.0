@model IEnumerable<Diiezer2._0.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>



@for (int i = 0; i < Model.Count() / 3; i++)
{
    <div class="row">
        <div class="col-md-4 portfolio-item">
            <a href="/Album/Details/@Model.ElementAt(3 * i).Id ">
                <img class="img-responsive" src=@Model.ElementAt(3*i).Cover alt="">
            </a>
            <h3>
                <a href="/Album/Details/@Model.ElementAt(3 * i).Id ">@Model.ElementAt(3* i).Titre</a>
            </h3>
            <a href="/Artiste/Details/@Model.ElementAt(3* i).Artiste1.Id">@Model.ElementAt(3 * i).Artiste1.Nom</a>
        </div>
        <div class="col-md-4 portfolio-item">
            <a href="/Album/Details/@Model.ElementAt(3 * i + 1).Id ">
                <img class="img-responsive" src=@Model.ElementAt(3*i + 1).Cover alt="">
            </a>
            <h3>
                <a href="/Album/Details/@Model.ElementAt(3 * i + 1).Id ">@Model.ElementAt(3 * i + 1).Titre</a>
            </h3>
            <a href="/Artiste/Details/@Model.ElementAt(3* i + 1).Artiste1.Id">@Model.ElementAt(3 * i + 1).Artiste1.Nom</a>
        </div>
        <div class="col-md-4 portfolio-item">
            <a href="/Album/Details/@Model.ElementAt(3 * i + 2).Id ">
                <img class="img-responsive" src=@Model.ElementAt(3*i + 2).Cover alt="">
            </a>
            <h3>
                <a href="/Album/Details/@Model.ElementAt(3 * i + 2).Id ">@Model.ElementAt(3 * i + 2).Titre</a>
            </h3>
            <a href="/Artiste/Details/@Model.ElementAt(3* i + 2).Artiste1.Id">@Model.ElementAt(3 * i + 2).Artiste1.Nom</a>
        </div>
    </div>
}

