@model IEnumerable<Diiezer2._0.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table grey-box">
    <tr>
        <th>
            Album
        </th>
        <th>
            Artiste
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.ActionLink(item.Artiste1.Nom , "../Artiste/Details", new { id = item.Artiste1.Id })
            </td>
            <td>
                @Html.ActionLink("Informations", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
