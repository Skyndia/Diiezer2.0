@model IEnumerable< Diiezer2._0.Models.Achat>




<div class="container">
    <div class="row grey-box">
        <h4>Achat</h4>
        <hr />
            @{
                foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                            <h5>@item.Chanson1.Titre</h5>
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2">
                            <h5>@item.Chanson1.Album1.Titre</h5>
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2">
                            <h5>@item.Date.ToString().Substring(0, 10)</h5>
                        </div>
                        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                            <audio src=@item.Chanson1.Musique controls></audio>                        
                        </div>
                    </div>
                }
            }
       
    </div>
</div>