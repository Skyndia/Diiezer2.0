@model Diiezer2._0.Models.vmArtisteInformation

@{
    ViewBag.Title = Model.nom;
}



<div class="grey-box2 container" style="margin-top:20px">
    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <hr/>
            <h2>@Model.nom</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <img src=@Model.cover class="img-responsive" style="width:50%;margin-left:25%" />
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h3>Albums : </h3>
                </div>
            </div>
            @{
                foreach (var item in Model.albums)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <h3>@item.Titre :</h3>
                        </div>
                        <div class="col-md-6">
                            <h3>@item.NbChanson  Chansons</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h5>
                                @Html.ActionLink("Accéder à l'album", "../Album/Details", new { id = item.Id }, new { @class = "btn btn-default btn-long" })
                            </h5>
                        </div>
                    </div>

                }
            }
       </div>
    </div>
    
    
    <hr />
    
</div>
<p>
    @Html.ActionLink("Index des Artistes",  "Index")
</p>
